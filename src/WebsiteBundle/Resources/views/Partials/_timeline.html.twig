<section id="timeline">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">{{ 'content.events.title' | trans() }}</h2>
                <h3 class="section-subheading text-muted">
                    {{ 'content.events.subtitle' | trans() }}
                    {% if center is defined %} - {{ center }} {% endif %}</h3>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-12">
                    <section id="cd-timeline" class="cd-container">

                        {% for event in events %}
                            <div class="cd-timeline-block">
                                {% if event.type == 'Meetup' %}
                                    <div class="timeline-image cd-timeline-img cd-picture">
                                        <img class="img-circle img-responsive" src="/bundles/website/images/meetup-icon.png" alt="">
                                    </div>
                                {% else %}
                                    <div class="cd-timeline-img cd-picture">
                                        <i class="fa fa-users fa-2x"></i>
                                    </div>
                                {% endif %}

                                <div class="cd-timeline-content">
                                    <h2>{{ event.title }}</h2>
                                    <p>{{ event.content | truncate(200)| raw  }}</p>
                                    {% if event.link != '' %}
                                        <div class="clearfix">
                                            <a href="{{ event.link }}" target="_blank" class="btn btn-primary pull-right">Detalii</a>
                                        </div>
                                    {% endif %}
                                    <span class="cd-date">{{ event.date | date('d-M-Y') }}</span>
                                </div>
                            </div>
                        {% endfor %}

                    </section>
                </div>
            </div>
        </div>
    </div>
</section>