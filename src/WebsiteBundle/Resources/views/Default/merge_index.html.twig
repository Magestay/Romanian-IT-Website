{% extends "WebsiteBundle::Structure/layout.html.twig" %}

{% block nav_bar_menu %}
    <ul class="one-page-menu">
        <li>
            <a class="page-scroll" href="{{ path('website_homepage') }}">{{ 'menu.home' | trans() }}</a>
        </li>
{% endblock %}

{% block content %}

<section id="page-title">

    <div class="container clearfix">
        <h1>Devino membru al hubului nostru virtual</h1>
        <span>{Foloseste contul de RomanianIT pentru a-ti crea cont pe Index, hubul nostru virtual.</span>
        <ol class="breadcrumb">
            <li><a href="#">Acasă</a></li>
            <li><a href="#">Înregistrare</a></li>
            <li class="active">Index</li>
        </ol>
    </div>

</section>
<section id="content">
    <div class="content-wrap">
        <div class="container clearfix">
            <div class="row">
                <div class="col-lg-12">
                    <form name="sentMessage" id="contactForm" novalidate action="{{ path('website_register_index') }}" target="_blank">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="password" class="form-control" name="password" id="password" required data-validation-required-message="Vă rugăm introduceți o parolă.">
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="col-lg-12 text-center">
                                <div id="success"></div>
                                <button type="submit" class="btn btn-xl">Start hubing</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}