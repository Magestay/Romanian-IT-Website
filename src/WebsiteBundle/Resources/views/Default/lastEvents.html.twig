
<!-- About Section -->
<section id="about" class="bg-light-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">{{ 'last_events.title' | trans() }}</h2>
                <h3 class="section-subheading text-muted">{{ 'last_events.subtitle' | trans() }}</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <ul class="timeline">
                    {% for event in events %}
                        <li {% if loop.index % 2 ==  0 %}class="timeline-inverted"{% endif %}>
                            <div class="timeline-image">
                                <img class="img-circle img-responsive" src="{{ asset('bundles/website/images/meetup-icon.png') }}" alt="" />
                            </div>
                            <div class="timeline-panel">
                                <div class="timeline-heading">
                                    <h4>{{ event.date | date('d-M-Y') }}</h4>
                                    <h4 class="subheading">{{ event.title }}</h4>
                                </div>
                                <div class="timeline-body">
                                    <p class="text-muted">{{ event.content | truncate(200) | raw }}</p>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                    <li class="timeline-inverted">
                        <a href="{{ path('website_events_list') }}" class="timeline-image">
                            {{ 'last_events.more' | trans() |raw }}
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>