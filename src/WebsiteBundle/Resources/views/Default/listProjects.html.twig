{% extends "WebsiteBundle::Structure/layout.html.twig" %}

{% block menu_class %} navbar-shrink {% endblock %}


{% block nav_bar_menu %}
    <ul class="one-page-menu">
        <li>
            <a class="page-scroll" href="{{ path('website_homepage') }}">{{ 'menu.home' | trans() }}</a>
        </li>
        <li>
            <a class="page-scroll" href="{{ path('website_projects_new') }}">{{ 'menu.suggest' | trans() }}</a>
        </li>
    </ul>
{% endblock %}

{% block content %}

    <section id="page-title">
        <div class="container clearfix">
            <h1>{{ 'content.projects.title' | trans() }}</h1>
            <span>{{ 'content.projects.subtitle' | trans() }}</span>
            <ol class="breadcrumb">
                <li><a href="/">{{ 'menu.home' | trans() }}</a></li>
                <li class="active">{{ 'menu.projects' | trans() }}</li>
            </ol>
        </div>
    </section>

    <section id="content" class="bottommargin">
        <div class="content-wrap">
            <div class="container clearfix">
                <div class="col-lg-12">
                {% for project in projects %}
                    <div class="row text-left">
                        <h2>{{ loop.index }}. {{ project.title }}</h2>
                        <div class="col-md-6">
                            <h4 class="service-heading"><i class="fa fa-pencil"></i> {{ 'content.projects.description_label' | trans() }}</h4>
                            <p class="text-muted">
                                {{ project.content }}

                            </p>
                        </div>
                        <div class="col-md-6">
                            <h4 class="service-heading"><i class="fa fa-github"></i> GitHub Repository</h4>
                            <p class="text-muted">
                            <pre class="command-line"><span class="command">{{ project.github }}</span></pre>
                            </p>
                            <div class="col-lg-12 text-center">
                                <a target="_blank" href="{{ project.repository }}">
                                    <button type="button" class="btn button btn-xl">{{ 'content.projects.btn_label' | trans() }}</button>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block footer_scripts %}{% endblock %}