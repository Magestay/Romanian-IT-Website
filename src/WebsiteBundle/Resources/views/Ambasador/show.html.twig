    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ambasador.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ ambasador.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ ambasador.lastname }}</td>
            </tr>
